/* pages/detail-search/index.wxss */
page{
  padding: 0 20rpx;
  background-color: #f4f4f4;
}
.van-search{
  position: fixed;
  top: 0;
  left: 10rpx;
  right: 10rpx;
  padding: 10rpx 0 !important;
}
.van-search__content{
  /* padding: 0 !important; */
  background-color: #fff !important;
}

.hot{
  width: 100%;
}
.hot .keywords{
  display: flex;
  flex-wrap: wrap;
}
.keywords .tag{
  padding: 5rpx 15rpx;
  margin: 10rpx 10rpx;
  background: #fff;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}
.keywords .tag:nth-child(1){
  /* background-color: red; */
  color: rgb(39, 209, 169);
}


.suggest .title{
  margin: 15rpx 10rpx;
  font-weight: 700;
  font-size: 27rpx;
  color: rgb(39, 209, 169);
}
.list{
  /* position: relative;
  left: -20rpx; */
  width: 100vw;
}
.list .item{
  display: flex;
  align-items: center;
  width: 100%;
}
.item image{
  width: 60rpx;
  height: 60rpx;
}
.item text{
  margin: 0 5rpx;
  font-size: 26rpx;
  color: #333;
}


.result .title{
  margin-top: 20rpx;
  font-weight: 700;
  color: rgb(39, 209, 169);
}