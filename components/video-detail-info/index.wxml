<!--components/video-detail/index.wxml-->
<wxs src="../../utils/format.wxs" module="format"></wxs>

<view class="detail-info">
  <view class="title">{{detailInfo.name}}</view>
  <view class="author">{{detailInfo.artistName}}</view>
  <view class="info">
    <view class="count">{{format.formatCount(detailInfo.playCount)}}次播放 -</view>
    <view class="date">{{detailInfo.publishTime}}</view>
  </view>
</view>
